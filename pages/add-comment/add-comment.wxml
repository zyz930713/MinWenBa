<!--pages/add-comment/add-comment.wxml-->
<view class='container' style='min-height:70vh'>
  <view class='note-content'>
    <text class='text-title'>{{answerText.answerText}}</text>
    <textarea class="area" placeholder='请输入你的评论' minlength="{{min}}" maxlength="{{max}}" bindinput="inputs">
      <text class="currentWordNumber">{{currentWordNumber|0}}/{{max}}</text>
    </textarea>
  </view>
  
  <view class='subBtn'>
    <button bindtap='submit'>提交评论</button>
  </view>
</view>
