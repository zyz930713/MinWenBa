/* pages/home/home.wxss */
.wrapper{
  padding-bottom: 100rpx;
}
.navbar{
  flex: none;
  display: flex;
}
.navbar .item{
  position: relative;
  font-size: 32rpx;
  flex: auto;
  color:#999999;
  text-align: center;
  line-height: 80rpx;
  min-width: 380rpx;
}
.navbar .item.active{
  color: #00A0E9;
}
.navbar .item.active::after{
  content: "";
  display: block;
  position: absolute;
  bottom:0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #00A0E9;
} 

/* 课前准备 */
.beforeClass{
  width: 750rpx;
  text-align: center;
  padding:20rpx;
  min-height:100rpx;
  font-size: 12px;
  background-color: #e5e5e5; 
  color:#333;
  margin-top: 24rpx;
  margin-bottom: 0;
  position: relative;
}
.beforeClass image{
  width: 28rpx;
  height: 30rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
}



/* 课前问题 */
.questions-wrap{
  width: 680rpx;
  text-align: left;
  margin-top: 30rpx;
  padding:15rpx;
  font-size: 12px;
  color:#000;
}
.questionContent{
  background-color:#fff;
  min-height:100rpx;
  padding: 24rpx;
  height:auto;
  margin-bottom:20rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 6px #ddd;
}
.anwserItems{
  background-color:#fff;
  min-height:150rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 6px #ddd;
  padding:20rpx;
}
.anwserItems .anwser-icon{
  width: 28rpx;
  height: 26rpx;
  margin-left: 10rpx;
  margin-top: 22rpx;
  vertical-align:top;
}
.anwserDec{
  width: 90%;
  display: inline-block;
  margin-left: 12rpx;
  border-bottom: 1px solid #DEDEDE;
  padding-bottom: 12rpx;
  position: relative;
}
.anwserDec-content,.commentsDec-content{
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.quesNum{
  display: inline-block;
  float: left;
  width: 54rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #FE7F69;
  color: #fff;
  padding: 10rpx;
}
.anwser-HeadImg{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  position: absolute;
  top:0;
  left: 0;
}
.anwserName,.commentName{
  margin-left: 70rpx;
}
.theAnswer,.theComment{
  margin-left: 70rpx;
}
.theAnswer,.theComment{
  table-layout:fixed;
  width: 400rpx;
  word-break:break-all;
  overflow: hidden;
}
.theAnswer text{
  white-space:normal
}
.quesDec{
  display: inline-block;
  vertical-align: middle;
  margin-left: 16rpx;
  width: 400rpx;
  padding-top:10rpx;
  padding-bottom:50rpx;
}
.isAnwser{
  display: inline-block;
  float: right;
  width: 80rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #fff;
  padding: 10rpx;
  font-size: 14px;
  text-align: center;
  line-height: 8px;
}
.anwsered{
  background-color:#4A9D4F ;
  color: #fff;
}
.noAnwser{
  background-color:#fff;
  color:#4A9D4F;
  border:1px solid #4A9D4F;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.red{
  color:#FE7F69
}
.grey{
  color:#999
}
.commentsDec{
  width:90%;
  margin-left:30rpx;
  border-bottom:1px solid #dedede;
  padding:20rpx;
  position: relative;
}
.Comment-HeadImg{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  position: absolute;
  top:12rpx;
  left: 22rpx;
}



/* 我的提问 */
.my-question{
  position: fixed;
  right: 80rpx;
  bottom: 40rpx;
}
.my-question image{
  width: 70rpx;
  height: 70rpx;
}